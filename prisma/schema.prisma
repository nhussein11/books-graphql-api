generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Author {
  id      String   @id @default(cuid())
  name    String
  surname String
  birth   DateTime

  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime

  Books Book[]
}

model Book {
  id          String       @id @default(cuid())
  title       String
  description String
  year        Int
  category    CategoryEnum

  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime

  author   Author @relation(fields: [authorId], references: [id])
  authorId String @map("author_id")
}

enum CategoryEnum {
  ADVENTURE
  HORROR
  SCIENCE_FICTION
  ROMANCE
  FANTASY
}
